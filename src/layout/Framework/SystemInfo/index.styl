// SystemInfo
.systemInfo {
    width: 100%;
    height: 64px;
    overflow: hidden;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    -khtml-user-select: none;
    user-select: none;
    box-shadow: 1px 1px 0 0 #e8e8e8;

    img {
        width: 52px;
        height: 50px;
        float: left;
        vertical-align: middle;
        border-radius: 50%;
        margin: 6.5px 7px 6.5px 13px;
    }
}

.statemNames {
    display: inline-block;
    margin: 0px 5px;
    height: 64px;

    p:nth-child(1) {
        margin-top: 23px;
    }

    p:nth-child(2) {
        font-size: 14px;
        margin-top: 21px;
    }
}